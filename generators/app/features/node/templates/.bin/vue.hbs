#!/usr/bin/env bash
. "$DOCKER_DEVBOX_DIR/.bash.lib.d/50-docker"

if [ "$1" == "run" ] && [ "$2" == "serve" ]; then
  PORTS=" -p ${DOCKER_DEVBOX_PORT_PREFIX}88:80"
  echo "Port mapping:$PORTS"
else
  PORTS=""
fi

run$PORTS --workdir="$(_docker_workdir "/app")" --entrypoint vue {{instance.name}} "$@"
